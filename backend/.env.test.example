# PostgreSQL Test Database Configuration
# Make sure this database exists and the user has permissions to create/drop schemas.
PGUSER=your_test_db_user
PGHOST=localhost
PGDATABASE=library_system_test # IMPORTANT: Use a different database for testing
PGPASSWORD=your_test_db_password
PGPORT=5432

# JWT Secret Key (can be the same as dev or different)
JWT_SECRET=your_jwt_secret_key_for_testing

# Server Port (optional for tests, as supertest uses the app directly)
# PORT=3002

# Path to users table template (should be the same as in .env.example)
USERS_TABLE_TEMPLATE_PATH=../db_scripts/03_create_users_table_template.sql

# Support Email (if testing support routes, can be a dummy one)
SUPPORT_EMAIL_ADDRESS=test_support@example.com
